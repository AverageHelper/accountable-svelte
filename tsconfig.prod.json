{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"declaration": false,
		"types": ["svelte"]
	},
	"ts-node": {
		"esm": true
	},
	"exclude": [
		"./src/**/*.stories.*",
		"**/*.mdx",
		"**/*.test.*",
		"node_modules/*",
		"__sapper__/*",
		"public/*",
		"./*.ts",
		"**/*.test.ts",
		"**/__mocks__/**/*.ts",
		"./server/**"
	]
}
