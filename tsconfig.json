{
	"extends": "./tsconfig.base.json",
	"compilerOptions": {
		"declaration": true,
		"noEmit": false,
		"types": ["vite/client", "svelte", "jest", "jest-extended"]
	},
	"ts-node": {
		"esm": true
	},
	"include": ["src/**/*", "*.svelte"],
	"exclude": [
		"node_modules/*",
		"__sapper__/*",
		"public/*",
		"**/*.test.ts",
		"**/__mocks__/**/*.ts",
		"./server/**"
	]
}
