{
	"name": "accountable-vue",
	"version": "0.0.0",
	"description": "A Vue app for managing monetary assets.",
	"scripts": {
		"start": "npm run dev",
		"test": "jest",
		"test:watch": "npm run test -- --watch",
		"dev": "vite",
		"prebuild": "npm run export-version && npm run lint",
		"buildonly": "vue-tsc --noEmit --project tsconfig.prod.json && vite build",
		"build": "npm run buildonly",
		"serve": "vite preview",
		"lint": "eslint . --ext .vue && eslint . --ext .js,.ts",
		"lint:fix": "eslint . --ext .vue --fix && eslint . --ext .js,.ts --fix",
		"export-version": "genversion ./src/client/version.ts -es"
	},
	"type": "module",
	"workspaces": [
		"src/client",
		"src/server"
	],
	"devDependencies": {
		"@types/jest": "^27.0.2",
		"@typescript-eslint/eslint-plugin": "^5.1.0",
		"@typescript-eslint/parser": "^5.1.0",
		"@vue/eslint-config-typescript": "^8.0.0",
		"eslint": "^7.32.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-config-strictest": "^0.3.1",
		"eslint-plugin-jest": "^25.2.2",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-prettier": "^4.0.0",
		"eslint-plugin-promise": "^5.1.1",
		"eslint-plugin-unicorn": "^37.0.1",
		"eslint-plugin-vue": "^7.20.0",
		"genversion": "^3.0.1",
		"jest": "^27.3.1",
		"jest-environment-node": "^27.3.1",
		"jest-extended": "^1.1.0",
		"prettier": "^2.4.1",
		"ts-jest": "^27.0.7",
		"typescript": "^4.4.3",
		"vue-eslint-parser": "^8.0.0"
	}
}
