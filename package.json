{
	"name": "accountable-vue",
	"version": "0.0.0",
	"description": "A Vue app for managing monetary assets.",
	"scripts": {
		"start": "npm run dev",
		"test": "jest",
		"test:watch": "npm run test -- --watch",
		"dev": "vite",
		"prebuild": "npm run export-version && npm run lint",
		"buildonly": "vue-tsc --noEmit --project tsconfig.prod.json && vite build",
		"build": "npm run buildonly",
		"serve": "vite preview",
		"lint": "eslint . --ext .vue && eslint . --ext .js,.ts",
		"lint:fix": "eslint . --ext .vue --fix && eslint . --ext .js,.ts --fix",
		"export-version": "genversion ./src/version.ts -es"
	},
	"type": "module",
	"dependencies": {
		"@averagehelper/job-queue": "^0.9.6",
		"atob-lite": "^2.0.0",
		"btoa-lite": "^1.0.0",
		"crypto-js": "^4.1.1",
		"firebase": "^9.1.1",
		"lodash": "^4.17.21",
		"node-forge": "^0.10.0",
		"pinia": "^2.0.0-rc.10",
		"source-map-support": "^0.5.20",
		"vue": "^3.2.16",
		"vue-router": "^4.0.11",
		"vue-toastification": "^2.0.0-rc.1",
		"vue3-date-time-picker": "^2.1.8"
	},
	"devDependencies": {
		"@types/atob-lite": "^2.0.0",
		"@types/btoa-lite": "^1.0.0",
		"@types/crypto-js": "^4.0.2",
		"@types/jest": "^27.0.2",
		"@types/lodash": "^4.14.175",
		"@types/node-forge": "^0.10.5",
		"@types/source-map-support": "^0.5.4",
		"@typescript-eslint/eslint-plugin": "^5.1.0",
		"@typescript-eslint/parser": "^5.1.0",
		"@vitejs/plugin-vue": "^1.9.3",
		"@vue/eslint-config-typescript": "^8.0.0",
		"eslint": "^7.32.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-config-strictest": "^0.3.1",
		"eslint-plugin-jest": "^25.2.2",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-prettier": "^4.0.0",
		"eslint-plugin-promise": "^5.1.1",
		"eslint-plugin-unicorn": "^37.0.1",
		"eslint-plugin-vue": "^7.20.0",
		"genversion": "^3.0.1",
		"jest": "^27.3.1",
		"jest-environment-node": "^27.3.1",
		"jest-extended": "^1.1.0",
		"prettier": "^2.4.1",
		"sass": "^1.42.1",
		"ts-jest": "^27.0.7",
		"typescript": "^4.4.3",
		"vite": "^2.6.10",
		"vite-tsconfig-paths": "^3.3.17",
		"vue-eslint-parser": "^8.0.0",
		"vue-tsc": "^0.28.8"
	}
}
